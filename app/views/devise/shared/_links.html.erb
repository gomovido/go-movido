<%- if controller_name != 'sessions' %>
  <div class="form-b-links d-flex align-items-center mt-2">
    <span><%= t('.already_account') %></span>
    <%= link_to t('.login'), new_session_path(resource_name), class:'ml-1' %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="form-b-links d-md-flex align-items-center mt-2 d-none">
    <span><%= t('.no_account') %></span>
    <%= link_to t('.sign_up'), new_registration_path(resource_name), class:'ml-1' %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="form-b-links d-md-flex align-items-center d-none">
    <%= link_to t('.forgot_password'), new_password_path(resource_name) %><br />
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="form-b-links d-md-flex align-items-center d-none">
    <%= link_to t('.confirmation_instruction'), new_confirmation_path(resource_name) %><br />
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('.unlock_instruction'), new_unlock_path(resource_name) %><br />
<% end %>
