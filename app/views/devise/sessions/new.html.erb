<div class="container registration-container d-flex align-items-center justify-content-center">
  <div class="row w-100">
    <div class="col-md-7 position-relative d-flex justify-content-center flex-column">
      <h1><%= t('.title').html_safe %></h1>
      <p><%= t('.subtitle').html_safe %></p>
      <figure class="big-blue-bubble position-absolute"></figure>
    </div>
    <div class="col-md-5">
      <div class="form-base">
        <h4 class="mb-4"><%= t('form.shared_links.sign_in') %></h4>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs-wrapper">
            <%= f.input :email, label: 'E-mail',
              required: true,
              autofocus: true,
              input_html: { autocomplete: "email" } %>
            <%= f.input :password,
              required: true,
              label: t('form.label.password'),
              input_html: { autocomplete: "current-password" } %>
          </div>
        <div class="mt-4">
          <%= f.button :submit, t('form.label.login'), class:'btn btn-main w-100' %>
           <%= render "devise/shared/links" %>
        </div>
        <% end %>
      </div>
      <div class="social-registrations text-center mt-3">
        <span class="mb-3 or">Or</span>
        <%= link_to user_google_oauth2_omniauth_authorize_path, class:'btn-google w-100 mb-3 position-relative d-flex align-items-center justify-content-center' do  %>
            <%= t('.google').html_safe %>
            <%= image_tag('google-logo.png', class: 'position-absolute') %>
        <% end %>
        <%= link_to user_facebook_omniauth_authorize_path, class:"btn-facebook w-100 mb-4 position-relative d-flex align-items-center justify-content-center" do %>
          <%= t('.facebook').html_safe %>
          <%= image_tag('facebook-logo.png', class: 'position-absolute') %>
        <% end %>
        </a>
      </div>
    </div>
  </div>
</div>
