<div class="container password-container mb-3 d-flex align-items-center justify-content-center">
  <div class="bubbles">
    <div class="bubble small-yellow-bubble"></div>
    <div class="bubble small-blue-bubble"></div>
    <div class="bubble small-yellow-bubble"></div>
    <div class="bubble small-blue-bubble"></div>
    <div class="bubble small-yellow-bubble"></div>
    <div class="bubble small-blue-bubble"></div>
    <div class="bubble small-yellow-bubble"></div>
    <div class="bubble small-blue-bubble"></div>
    <div class="bubble small-yellow-bubble"></div>
    <div class="bubble small-blue-bubble"></div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-base">
        <h4 class="mb-4"><%= t('.title') %></h4>
        <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.input :email,
                        required: false,
                        autofocus: true,
                        value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                        label: false,
                        input_html: { autocomplete: "email", placeholder: t('.placeholder') } %>
          <div class="mt-4">
            <%= f.button :submit, t('.confirm'), class:'btn-main w-100' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
