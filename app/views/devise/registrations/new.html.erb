<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="title">
        <h2>Welcome to movido</h2>
        <div class="desc">
          <span>movido will help you set-up all you need for your new home – from your mobile account to your gym abo – before you move to give you time to focus on the really important things.</span>
        </div>
        <div class="illustration">
          <%= image_tag(asset_path('girl-down.png')) %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-wrapper" data-controller="registration">
        <h4>Sign up</h4>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        label: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", placeholder: 'Email address' }%>
            <%= f.input :first_name,
                        required: true,
                        label: false,
                        input_html: { placeholder: 'First name' } %>
            <%= f.input :last_name,
                        required: true,
                        label: false,
                        input_html: { placeholder: 'Last name' } %>
            <%= f.input :phone,
                        required: true,
                        label: false,
                        input_html: { placeholder: 'Mobile Phone' } %>
            <%= f.input :city,
                        required: true,
                        label: false,
                        input_html: { placeholder: 'City I am moving to' } %>
            <%= f.input :address,
                        required: true,
                        label: false,
                        input_html: { placeholder: 'Address' } %>
            <%= f.check_box :not_housed,
                        required: true,
                        label: false %>
            <span>I don’t have an address yet</span><br>
            <span>When are your moving</span>
            <%= f.input :moving_date, as: :string,
                        required: true,
                        label: false,
                        input_html: { placeholder: 'DD/MM/YYYY', class:'datepicker', data: { target: 'registration.date' } } %>

            <%= f.check_box :already_moved,
                        required: true,
                        label: false %>
            <span>I have already moved</span>
            <%= f.input :password,
                        required: true,
                        label: false,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", placeholder: "password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        label: false,
                        input_html: { autocomplete: "new-password", placeholder: "password confirmation" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class:'btn btn-main' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
