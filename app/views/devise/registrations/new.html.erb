<div class="container registration-container py-3">
  <div class="row">
    <div class="col-md-7 position-relative mt-5">
      <h1>Welcome to <br>movido</h1>
      <p>movido will help you set-up all you need for your new home – from <br>your mobile account to your gym abo – before you move to give <br>you time to focus on the really important things</p>
      <figure class="big-blue-bubble position-absolute"></figure>
    </div>
    <div class="col-md-5">
      <div class="form-base">
        <h4 class="mb-4"><%= t('form.shared_links.sign_up') %></h4>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-inputs-wrapper">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", placeholder: t('form.placeholder.email')}%>
            <div class="d-flex justify-content-between">
              <%= f.input :first_name,
                        required: true,
                        input_html: { placeholder: t('form.placeholder.first_name') }%>
              <%= f.input :last_name,
                        required: true,
                        input_html: { placeholder: t('form.placeholder.last_name') }%>
            </div>
            <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "new-password", placeholder: t('form.placeholder.password')}%>
            <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", placeholder: t('form.placeholder.password_confirmation')}, error: false %>
          </div>
        <div class="mt-4">
          <%= f.button :submit, t('form.label.register'), class:'btn btn-main w-100' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
