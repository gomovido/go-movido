<div class="container registration-container py-3">
  <div class="row">
    <div class="col-md-7 position-relative mt-5">
      <h1>Welcome to <br>movido</h1>
      <p>movido will help you set-up all you need for your new home – from <br>your mobile account to your gym abo – before you move to give <br>you time to focus on the really important things</p>
      <figure class="big-blue-bubble position-absolute"></figure>
    </div>
    <div class="col-md-5">
      <div class="form-base">
        <h4 class="mb-4"><%= t('form.shared_links.sign_up') %></h4>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-inputs-wrapper">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", placeholder: 'john.doe@sorbonne-university.fr'}%>
            <div class="d-flex justify-content-between">
              <%= f.input :first_name,
                        required: true,
                        input_html: { placeholder: 'John' }%>
              <%= f.input :last_name,
                        required: true,
                        input_html: { placeholder: 'Doe' }%>
            </div>
            <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "new-password", placeholder: t('form.placeholder.password')}%>
            <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", placeholder: t('form.placeholder.password')} %>
          </div>
        <div class="mt-4">
          <%= f.button :submit, t('form.label.register'), class:'btn-main w-100' %>
        </div>
        <% end %>
      </div>
      <div class="social-registrations text-center mt-3 d-flex flex-column">
        <span class="mb-3 or">Or</span>
        <a class="btn-google w-100 mb-3 position-relative d-flex align-items-center justify-content-center" href="#">
          Register with Google
          <%= image_tag('google-logo.png', class: 'position-absolute') %>
        </a>
        <a class="btn-facebook w-100 mb-4 position-relative d-flex align-items-center justify-content-center" href="#">
          Register with Facebook
          <%= image_tag('facebook-logo.png', class: 'position-absolute') %>
        </a>
      </div>
    </div>
  </div>
</div>
