<hr class="breaker-home">
<div class="container mt-2 p-md-5">
  <div class="row">
    <div class="col-md-6 d-none d-sm-block">
      <div class="registration-wrapper p-2 d-flex flex-column justify-content-evenly">
        <h2 class='title pr-5 pl-5'>Welcome to <%= image_tag(asset_path('box-movido.png'), class: 'box-movido') %> movido</h2>
        <span class='desc pr-5 pl-5 mb-5'>movido will help you set-up all you need for your new home – from your mobile account to your gym abo – before you move to give you time to focus on the really important things</span>
        <div class="illustration d-flex justify-content-center">
          <%= image_tag(asset_path('girl-down.png')) %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="registration-form-wrapper p-md-5 p-4" data-controller="registration">
        <h4 class="mb-3">Sign up</h4>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="registration-input">
              <span class="placeholder-left"><%= t('form.label.first_name') %></span>
              <%= f.input :first_name,
                        required: true,
                        label: false,
                        input_html: { class:'input-clear' }, error: false%>
            </div>
            <%= f.full_error :first_name, class: 'invalid-feedback mb-3 text-right' %>
            <div class="registration-input">
              <span class="placeholder-left"><%= t('form.label.last_name') %></span>
              <%= f.input :last_name,
                        required: true,
                        label: false,
                        input_html: { class:'input-clear' }, error: false%>
            </div>
            <%= f.full_error :last_name, class: 'invalid-feedback mb-3 text-right' %>
            <div class="registration-input">
              <span class="placeholder-left"><%= t('form.label.birth_city') %></span>
              <%= f.input :birth_city,
                        required: true,
                        label: false,
                        input_html: { data: {
                        target: 'registration.cityInput'}}, error: false%>
            </div>
            <%= f.full_error :last_name, class: 'invalid-feedback mb-3 text-right' %>
            <div class="registration-input">
              <span class="placeholder-left"><%= t('form.label.birthdate') %></span>
              <%= f.input :birthdate, as: :string,
                         required: true,
                         label: false,
                         input_html: { placeholder: 'DD/MM/YYYY', class:'datepicker p-xs-0 ml-xs-2', data: {
                          controller: "flatpickr", flatpickr_date_format: "d-m-Y", flatpickr_max_date: Time.zone.now - 16.years} }, error: false %>
            </div>
            <%= f.full_error :birthdate, class: 'invalid-feedback mb-3 text-right' %>
            <div class="registration-input">
              <span class="placeholder-left"><%= t('form.label.email') %></span>
              <%= f.input :email,
                          required: true,
                          label: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class:'input-clear'}, error: false%>
            </div>
            <%= f.full_error :email, class: 'invalid-feedback mb-3 text-right' %>
            <div class="registration-input">
              <span class="placeholder-left"><%= t('form.label.phone') %></span>
                <%= f.input :phone,
                        required: true,
                        label: false,
                        input_html: { placeholder: 'Mobile Phone', data: { target: 'registration.phone' } }, error: false %>
            </div>
            <%= f.full_error :phone, class: 'invalid-feedback mb-3 text-right' %>
            <div class="registration-input">
              <span class="placeholder-left"><%= t('form.label.moving_country') %></span>
              <%= f.input :country,
                        required: true,
                        label: false,
                        collection: ['France', 'United Kingdom'],
                        prompt: "Choose", input_html: {data: {target: 'registration.countryMoving', action: 'change->registration#updateAlgolia'}}, error: false %>
            </div>
            <%= f.full_error :country, class: 'invalid-feedback mb-3 text-right' %>
            <div class="registration-input">
              <span class="placeholder-left"><%= t('form.label.moving_city') %></span>
              <%= f.input :city,
                        required: true,
                        label: false,
                        input_html: { data: { target: 'registration.cityMoving' } }, error: false %>
            </div>
            <%= f.full_error :city, class: 'invalid-feedback text-right' %>
            <div class="d-flex align-items-center mb-2">
              <%= f.check_box :not_housed,
                        label: false, data: { action: 'click->registration#toggleAddress', target: 'registration.checkboxAddress'}, error: false %>
              <label class="m-0 pl-2"><%= t('form.label.not_housed') %></label>
            </div>
            <%= f.full_error :not_housed, class: 'invalid-feedback mb-3 text-right' %>
            <%= f.simple_fields_for :addresses do |s| %>
              <div class="registration-input" id="addressInput">
                <span class="placeholder-left"><%= t('form.label.moving_street') %></span>
                  <%= s.input :street,
                        required: true,
                        label: false,
                        input_html: { data: {
                          target: 'registration.addressInput'
                        }}, error: false%>
              </div>
              <%= s.full_error :street, class: 'invalid-feedback mb-3 text-right' %>
                <%= s.hidden_field :zipcode, id:'address_zipcode' %>
                <%= s.hidden_field :country, id:'address_country' %>
                <%= s.hidden_field :city, id:'address_city' %>
            <% end %>
            <div class="registration-input">
              <span class="placeholder-left"><%= t('form.label.password') %></span>
                <%= f.input :password,
                      required: true,
                      label: false,
                      input_html: { autocomplete: "new-password", placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) }, error: false %>
            </div>
            <%= f.full_error :password, class: 'invalid-feedback mb-3 text-right' %>
            <div class="registration-input">
              <span class="placeholder-left"><%= t('form.label.password_confirmation') %></span>
                <%= f.input :password_confirmation,
                      required: true,
                      label: false,
                      input_html: { autocomplete: "new-password"}, error: false %>
            </div>
            <%= f.full_error :password_confirmation, class: 'invalid-feedback text-right' %>
          </div>
        <div class="form-actions text-lg-left text-center">
          <%= f.button :submit, t('form.label.register'), class:'btn btn-main' %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
