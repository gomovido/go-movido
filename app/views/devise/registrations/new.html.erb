<div class="flow-container" data-controller="animate">
  <%= controller.controller_name %>
  <%= controller.action_name %>
  <%= render 'shared/progress_bar', step: 1 %>
  <div class="container">
      <%= render 'shared/chat', messages: [{content: "Hello! Iâ€™m Alice and I will help you get settled in your new city. Let's get to know each other a little better", delay: 0}] %>
      <div class="content-container" data-delay="1" data-animate-target="contentContainer">
        <div class="form-base">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.input :first_name,
                    required: true, autofocus: true, placeholder: 'John' %>
          <%= f.input :last_name,
                    required: true, placeholder: 'Doe', label: 'Surname' %>
          <%= f.input :email,
            required: true,
            input_html: { autocomplete: "email"}, placeholder: 'johndoe@gmail.com' %>
          <%= f.button :submit, 'Continue' , class: 'btn-main' %>
        <% end %>
        </div>
        <%= link_to 'I already have an account', new_user_session_path %>
      </div>
  </div>
</div>

