<div class="flow-container">
  <%= render 'shared/progress_bar', step: 1 %>
  <div class="container">
      <%= render 'shared/chat', @messages: messages: [{content: "Hello! Iâ€™m Alice and I will help you get settled in your new city.", delay: 0}, {content: "Let's get to know each other a little better", delay: 1}] %>
      <div class="form-base animate__animated animate__fadeInLeft animate__delay-2s">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.input :first_name,
                  required: true, autofocus: true, placeholder: 'John' %>
        <%= f.input :last_name,
                  required: true, placeholder: 'Doe', label: 'Surname' %>
        <%= f.input :email,
          required: true,
          input_html: { autocomplete: "email"}, placeholder: 'johndoe@gmail.com' %>
        <%= f.button :submit, 'Continue' , class: 'btn-main' %>
      <% end %>
      </div>
  </div>

</div>

