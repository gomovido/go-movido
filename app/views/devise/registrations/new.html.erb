<hr class="breaker-home">
<div class="container mt-2 p-md-5">
  <div class="row">
    <div class="col-md-7 d-none d-sm-block">
    </div>
    <div class="col-md-5">
      <div class="registration-form">
        <h4 class="mb-4"><%= t('form.shared_links.sign_up') %></h4>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-inputs-wrapper">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", placeholder: t('form.placeholder.email')}, error: false %>
            <%= f.full_error :email, class: 'invalid-feedback mb-3 text-right' %>
            <div class="d-flex justify-content-between">
              <%= f.input :first_name,
                        required: true,
                        input_html: { placeholder: t('form.placeholder.last_name') }, error: false%>
              <%= f.full_error :first_name, class: 'invalid-feedback mb-3 text-right' %>
              <%= f.input :last_name,
                        required: true,
                        input_html: { placeholder: t('form.placeholder.last_name') }, error: false%>
              <%= f.full_error :last_name, class: 'invalid-feedback mb-3 text-right' %>
            </div>
            <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "new-password", placeholder: t('form.placeholder.password')}, error: false %>
            <%= f.full_error :password, class: 'invalid-feedback mb-3 text-right' %>
            <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", placeholder: t('form.placeholder.password_confirmation')}, error: false %>
            <%= f.full_error :password_confirmation, class: 'invalid-feedback text-right' %>
          </div>
        <div class="mt-4">
          <%= f.button :submit, t('form.label.register'), class:'btn btn-main w-100' %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
