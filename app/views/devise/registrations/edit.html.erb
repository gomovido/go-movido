<div class="container edit-container d-flex mb-5 flex-column justify-content-center align-items-center">
  <figure class="big-blue-bubble position-absolute d-none d-md-block"></figure>
  <figure class="position-absolute small-yellow-bubble"></figure>
  <figure class="small-blue-bubble position-absolute d-block d-md-none"></figure>
  <div class="form-base">
    <h4 class="mb-3"><%= t('devise.registrations.edit.title') %></h4>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.input :email,
    required: true,
    autofocus: true, placeholder: true %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :password,
    required: false,
    input_html: {autocomplete: 'new-password', placeholder: t('form.placeholder.password') }%>
    <%= f.input :password_confirmation,
    required: false,
    input_html: {autocomplete: 'new-password', placeholder: t('form.placeholder.password') }%>
    <%= f.input :current_password,
    required: true,
    input_html: {autocomplete: 'new-password' }%>
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
      <%= f.button :submit, "Update", class:'btn-main mb-3 mb-md-0' %>
      <%= link_to "Delete account", user_registration_path, confirm: "Are you sure?", class: 'btn-exit', method: :delete %>
    </div>
    <% end %>
  </div>
</div>
