<div class="container edit-container d-flex mb-5 flex-column justify-content-center align-items-center">
  <figure class="big-blue-bubble position-absolute d-none d-md-block"></figure>
  <figure class="position-absolute small-yellow-bubble"></figure>
  <figure class="small-blue-bubble position-absolute d-block d-md-none"></figure>
  <div class="form-base">
    <h2 class="mb-3"><%= t('.title') %></h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.input :email,
    required: true,
    autofocus: true, placeholder: true %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :password, label: t('.form.label.password'),
    required: false,
    input_html: {autocomplete: 'new-password', placeholder: t('activerecord.attributes.user.password') }%>
    <%= f.input :password_confirmation, label: t('.form.label.password_confirmation'),
    required: false,
    input_html: {autocomplete: 'new-password', placeholder: t('activerecord.attributes.user.password_confirmation') }%>
    <%= f.input :current_password,
    required: true,
    input_html: {autocomplete: 'new-password' }%>
    <%= f.button :submit, t('.update'), class:'btn-main mb-4 w-100' %>
    <div class="col-12 text-center">
      <%= link_to t('.delete'), user_registration_path, data: {confirm: t('.popup')}, class: 'delete-link', method: :delete %>
    </div>
    <% end %>
  </div>
</div>
