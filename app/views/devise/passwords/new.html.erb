<div class="container blue-bg mt-2 p-md-5">
  <div class="row">
    <div class="col-md-12 d-flex align-items-center ju">
      <div class="registration-form-wrapper p-md-5 p-4">
        <h4 class="mb-3">Forgot your password?</h4>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        label: false,
                        input_html: { autocomplete: "email", placeholder: 'Email address' } %>
          </div>
          <div class="form-actions text-lg-left text-center">
            <%= f.button :submit, "Send me reset password instructions", class:'btn btn-main' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
