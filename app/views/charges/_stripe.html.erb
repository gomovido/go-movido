<script src="https://js.stripe.com/v3/"></script>
<div class="col-md-6 offset-md-3 my-5">
  <div class="d-flex align-items-center">
     <i class="fas fa-lock mr-4 p-2"></i>
     <div class="texts">
      <%= image_tag(asset_path('stripe-logo.png')) %>
      <h4 class="text-left"><strong><%= t('payment.connection') %></strong></h4>
      <span class="bit-info">HTTPS - 256-bit encryption - stripe certified</span>
     </div>
  </div>
  <hr>
  <div class="form-base">
    <%= simple_form_for @subscription, url: "/charge", method: :post, data: {controller: "charge", locale: I18n.locale}, html: {id: 'payment-form'} do |f| %>
      <%= f.hidden_field :authenticity_token, value: form_authenticity_token %>
      <%= f.hidden_field :subscription_id, value: @subscription.id %>
      <div class="form-divs-wrapper mb-5">
        <div class="form-group">
          <label for="card-number-element" class="my-3 w-100 text-left"><%= t('payment.number') %></label>
          <div class="d-flex align-items-center flex-column">
            <div id="card-number-element" class="form-control stripe-input w-100 d-flex align-items-center" placeholder="**** **** **** ****"></div>
            <div id="card-errors" class="mt-2" role="alert"></div>
          </div>
        </div>
        <div class="name-fields d-flex justify-content-between">
          <div class="form-group">
            <div class="d-flex flex-column">
              <label for="card-expiry-element" class="my-3 w-100 text-left"><%= t('payment.date') %></label>
              <div id="card-expiry-element" class="form-control stripe-input w-100 d-flex align-items-center" placeholder="**/**"></div>
            </div>
          </div>
          <div class="form-group">
            <div class="d-flex flex-column">
              <label for="card-cvc-element" class="my-3 w-100 text-left">CVC</label>
              <div id="card-cvc-element" class="form-control stripe-input w-100 d-flex align-items-center" placeholder="***"></div>
            </div>
          </div>
        </div>
        <hr>
        <div class="form-group">
          <span class="legals text-justify">By clicking on proceed payment you accept <strong>our terms and conditions</strong> and <strong>Stripe terms and conditions.</strong></span>
        </div>
        <%= f.button :submit, 'Proceed payment', class: 'btn-main w-100', data: {disable_with: false}%>
      </div>
    <% end %>
  </div>
</div>
