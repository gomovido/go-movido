 <div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="form d-flex flex-column justify-content-center mb-0 p-4">
      <%= simple_form_for address, data: {controller: "address-form"}, id:"address-form",  html: { class:"d-flex flex-column align-items-center" }, method: :put do |form| %>
        <%= form.hidden_field :product_id, value: @product.id %>
        <div class="input-wrapper mb-3">
          <label for="street" class="mb-3">Address</label>
          <div class="input text-right d-flex justify-content-end pl-3 pr-3">
            <%= form.text_field :street, class:'form-control', disabled: true, label: false, value: address.street  %>
          </div>
        </div>
        <hr>
        <div class="input-wrapper d-flex align-items-center mb-3">
          <label class="mb-0">I donâ€™t have a phone number yet</label>
          <%= form.check_box :phoned, required: true, label: false, class: 'w-auto ml-5', data: { action: 'click->address-form#toggleMobile'} %>
        </div>
        <div class="input-wrapper mb-5 <%= @active_address.phoned ? 'd-none' : '' %>" data-target="address-form.phoneField">
          <label for="mobile_phone" class="mb-3">Mobile Phone</label>
          <div class="input text-right d-flex justify-content-end pl-3 pr-3" >
            <%= form.text_field :mobile_phone, data: {target: "address-form.mobilePhone"}, value: address.mobile_phone, html_input: {id: 'mobile_phone'}, class:'phone form-control'  %>
          </div>
        </div>
         <div class="actions d-flex justify-content-around">
          <%= link_to 'Back', url_for(:back), class: 'btn btn-minor' %>
          <%= form.submit 'Confirm', class: 'btn-main' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
