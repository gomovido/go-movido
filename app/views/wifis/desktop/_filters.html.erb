<div class="filters-container w-100">
  <div class="filter-wrapper mb-3">
    <div class="d-flex align-items-center justify-content-between">
      <span class="title"><%= t('products.wifi-filter.title') %></span>
      <%= link_to t('products.wifi-filter.reset'), wifis_path, data: { turbolinks: false }, class: 'reset' %>
    </div>
    <div class="round my-3" data-action="click->filters#wifiFilter">
      <%= check_box_tag :with_obligation %>
      <span class="ml-3"><%= t('products.wifi-filter.contract_only') %></span>
    </div>
    <div class="round mb-3" data-action="click->filters#wifiFilter">
      <%= check_box_tag :without_obligation %>
      <span class="ml-3"><%= t('products.wifi-filter.no_contract') %></span>
    </div>
    <span class="price-label"><%= t('products.wifi-filter.by_price', unit: @products.first.country.currency_sign) %></span>
    <div class="bot-box mt-4 mb-3">
      <div class="d-flex justify-content-between align-items-center">
        <span class="price-input" id="min">1</span>
        <span class="price-input" id="max">50</span>
      </div>
      <div id="slider-range" class="mt-3" data-filters-target="input"></div>
    </div>
  </div>
</div>
