<div class="filters-container d-lg-flex flex-column d-none">
  <%= search_form_for @q, data: {controller: 'range-slider'} do |f| %>
  <%= f.hidden_field :currency, value: products.first.sim_card_price.currency.symbol, data: {range_slider_target: 'currency'} %>
  <%= f.hidden_field :category_id, value: products.first.category.slug %>
  <div class="filter-wrapper mb-3">
    <div class="d-flex align-items-center justify-content-between">
      <span class="title"><%= t('.title') %></span>
      <%= link_to t('.reset'), category_products_path(@category), class: 'reset' %>
    </div>
    <div class="round my-3">
      <%= check_box_tag('q[obligation_true]', 1, params[:q] && params[:q][:obligation_true].present?,
      onclick: ("this.form.submit();")) %>
      <span class="ml-3"><%= t('.contract_only') %></span>
    </div>
    <div class="round mb-3">
      <%= check_box_tag('q[obligation_false]', 1, params[:q] && params[:q][:obligation_false].present?,
      onclick: ("this.form.submit();")) %>
      <span class="ml-3"><%= t('.no_contract') %></span>
    </div>
    <span class="price-label"><%= t('.by_price') %></span>
    <div class="bot-box mt-4 mb-3">
      <div class="d-flex justify-content-between align-items-center">
        <%= f.text_field :price_gteq, class:'price-input', value: "1#{@products.first.sim_card_price.currency.symbol}", placeholder: 'min', readonly: true %>
        <%= f.text_field :price_lteq, class:'price-input', value: "50#{@products.first.sim_card_price.currency.symbol}", placeholder: 'max', readonly: true  %>
      </div>
      <div id="slider-range" class="mt-3" data-range-slider-target="input" onclick="document.getElementById('product_search').submit();"></div>
    </div>
    <% end %>
  </div>
</div>
