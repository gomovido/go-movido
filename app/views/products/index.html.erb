<div class="container products-container">
  <div class="step-1">
    <%= render 'subscriptions/steps', current_step: 1, title: t('steps.choose_offer'), total_steps: @products.first.total_steps %>
    <%= render 'product-details'%>
    <div class="row">
      <div class="col-md-4 d-flex justify-content-start">
        <%= render 'filters', products: @products %>
      </div>
      <div class="col-md-8">
        <div class="products-cards-wrapper">
          <% @products.each do |product| %>
            <% if product.is_wifi? %>
              <%= render 'wifi-card', product: product %>
            <% elsif product.is_mobile?%>
              <%= render 'mobile-card', product: product %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
