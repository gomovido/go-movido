<div class="product-card d-flex align-items-center justify-content-between px-3 py-4 mb-4" data-controller="modal" data-action="click->modal#redirect" id=<%= product.id %>>
  <%= link_to category_product_subscriptions_path(product.category, product), method: :post, id: product.id, data: {target: 'product.link'} do %>
    <div class="d-flex align-items-center justify-content-center"><%= image_tag(product.logo_url, class: 'logo') %></div>
    <div class="offer">
      <span class="company d-none d-sm-block"><%= product.company %></span>
      <h5 class="name mt-2 "><%= product.company %> <%= product.name %></h5>
      <span class="localization d-none d-sm-block"><i class="fas fa-map-pin mr-2"></i><%= product.description %></span>
      <p class="description mt-3 mb-0"><%= product.product_features.first.description %> <%= link_to 'See details', modal_product_path(product), data: {target: '#exampleModal',
      action: 'click->modal#loadModal', href: modal_product_path(product), toggle: 'modal'}, id: 'modal-link' %></p>
    </div>
    <div class="pricing text-center">
      <div class="price">
        <span class="number px-1"><%= product.price.to_i %> <%= product.sim_card_price.currency.symbol %></span><br>
        <span class="frequency">monthly</span>
      </div>
      <div class="data align-items-center my-3 d-none d-sm-flex"><%= image_tag('wifi.png', class: 'mr-3') %> <%= product.data_speed %> Ã˜ speed</div>
      <div class="contract align-items-center my-3 d-none d-sm-flex"><%= image_tag('contract.png', class: 'mr-3') %> <%= product.time_contract %> <span class="ml-1">months</span></div>
      <div class="sim align-items-center mt-3 d-none d-sm-flex"><%= image_tag('sim-picto.png', class: 'mr-3') %> <%= product.setup_price %><%= product.sim_card_price.currency.symbol %><span class="ml-1"> setup costs</span></div>
    </div>
  <% end %>
  </div>
