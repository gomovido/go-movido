<% if event.include?('subscription') %>
  <script>
    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({
      'userID': '<%= user_id %>',
      'userEmail': '<%= email %>',
      'event': '<%= event %>'
      'subscriptionId': '<%= subscription_id %>',
      'product_type': '<%= product_type %>'
    });
  </script>
<% else %>
  <script>
    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({
      'userID': '<%= user_id %>',
      'userEmail': '<%= email %>',
      'event': '<%= event %>'
    });
  </script>

<% end %>
