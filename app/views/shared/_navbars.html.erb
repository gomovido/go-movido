<% if browser.device.mobile? %>
  <% if controller.controller_name == 'providers' %>
    <%= render 'providers/mobile/navbar' %>
  <% elsif controller.controller_name == 'flats' && controller.action_name != 'landing' %>
    <%= render 'flats/mobile/navbar' %>
  <% else %>
    <%= render 'shared/mobile/navbar' %>
  <% end %>
<% else %>
  <%= render 'shared/desktop/navbars' %>
<% end %>
