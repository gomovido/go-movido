<% if notice %>
  <div class="alert alert-success alert-dismissible fade show m-1" data-flashes-target="flash" data-controller="flashes" role="alert">
    <%= notice.html_safe %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% end %>
  <% if alert %>
  <div class="alert alert-danger alert-dismissible fade show m-1"  data-flashes-target="flash" data-controller="flashes" role="alert">
    <%= alert.html_safe %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
