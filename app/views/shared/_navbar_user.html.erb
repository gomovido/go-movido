<div class="navbar navbar-expand-sm navbar-light navbar-movido" data-controller="navbar" data-target="navbar.navbar" data-action="scroll@window->navbar#onScroll">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag("logo.svg") %>
  <% end %>
  <%= render 'shared/modal-navbar' %>
  <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <%= render 'shared/mobile-dropdown' %>
    <%= render 'shared/desktop-dropdown' %>
  </div>
</div>
