<div class="navbar navbar-expand-md navbar-light navbar-movido" data-controller="navbar" data-navbar-target="navbar" data-action="scroll@window->navbar#onScroll" data-navbar-fixed-class="fixed-nav">
  <%= link_to root_path, class: "navbar-brand me-0" do %>
    <%= image_tag(asset_path("logos/movido-black.svg")) %>
  <% end %>
  <% if controller_name == 'pages' && action_name == 'home' %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to t('shared.navbar_visitor.about_us'), about_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t('shared.navbar_visitor.how_it_works'), how_it_works_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'My account', dashboard_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Get Started', onboarding_path, class: 'btn-main' %>
        </li>
      </ul>
    </div>
  <% elsif current_user %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to 'Log out', destroy_user_session_path, method: 'delete', class:'navbar-link' %>
        </li>
      </ul>
    </div>
  <% end %>
</div>
