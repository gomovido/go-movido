<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag(asset_path('logo.png'), width: "130", height: "45") %>
  <% end %>

  <% if user_signed_in? %>
    <span class="d-lg-none" data-toggle="collapse" data-target="#navbarSupportedContent" aria-label="Toggle navigation" aria-expanded="false" aria-controls="navbarSupportedContent">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar cursor-pointer navbar-toggler border-0 p-0" %>
    </span>
  <% else %>
    <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <% end %>

  <%= render 'shared/modal' %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item d-flex align-items-center mt-2 mt-lg-0">
            <%= link_to "My Profile", '#', class: "nav-link profile-link" %>
        </li>
      <% else %>
        <li class="nav-item d-flex align-items-center mt-2">
          <%= link_to ("<i class='fas fa-user pl-3 pr-4 d-lg-inline d-none'> &nbsp&nbsp|</i> Login").html_safe, new_user_session_path, class: "nav-link btn-minor pr-lg-4" %>
        </li>
        <li class="nav-item d-flex align-items-center d-flex justify-content-between d-lg-none">
          <%= link_to "About us", '#' , class: "nav-link" %>
        </li>
        <li class="nav-item d-flex align-items-center d-lg-none">
          <%= link_to "Contact us", '#' , class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
