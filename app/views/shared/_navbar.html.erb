<div class="navbar navbar-expand-sm navbar-light navbar-lewagon justify-content-around pt-4">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag(asset_path('logo.png')) %>
  <% end %>

  <% if user_signed_in?%>
    <div class="d-lg-none">
      <%= render 'shared/profile-dropdown' %>
    </div>
  <% else %>
    <% unless current_page?(new_user_session_path) %>
      <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    <% end %>
  <% end %>

  <%= render 'shared/modal-navbar' %>
  <% unless current_page?(new_user_session_path) %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <%= render 'shared/profile-dropdown' %>
      <% else %>
        <li class="nav-item d-flex align-items-center mt-2">
          <%= link_to ("<i class='fas fa-user pl-3 pr-4 d-lg-inline d-none'> &nbsp&nbsp|</i> Login").html_safe, new_user_session_path, class: "nav-link btn-minor pr-lg-4" %>
        </li>
        <li class="nav-item d-flex align-items-center d-flex justify-content-between d-lg-none">
          <%= link_to "About us", '#' , class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
  <% end %>
</div>
