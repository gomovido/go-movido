<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag(asset_path('logo.png'), width: "130", height: "45") %>
  <% end %>

  <% if user_signed_in? %>
    <span data-toggle="collapse" data-target="#navbarSupportedContent" aria-label="Toggle Navigation" aria-expanded="false" aria-controls="navbarSupportedContent">
      <span class="cursor-pointer navbar-toggler border-0 p-0"><%= current_user.first_name%></span>
    </span>
  <% else %>
    <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <% end %>
  <div class="menu-button d-none d-lg-flex align-items-center" data-controller="hamburger" data-action="click->hamburger#transform" data-target="hamburger.button">
    <div class="hamburger mr-1">
      <span id="h-1"></span>
      <span class="mt-1" id="h-2"></span>
    </div>
    <span class="text" data-target="hamburger.text">Menu</span>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item d-flex align-items-center">
          <%= link_to ("<i class='fas fa-user pl-3 pr-4'> &nbsp&nbsp|</i> Login").html_safe, new_user_session_path, class: "nav-link btn-minor pr-4 ml-0 pl-0 ml-md-3 pl-md-2" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
