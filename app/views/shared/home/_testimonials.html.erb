<section id="carousel">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="carousel-bg" style="background-image:url(<%= asset_path 'quote-left.png' %>);">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="m-2 active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1" class="m-2"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2" class="m-2"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="3" class="m-2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <%= render 'shared/home/carousel-card', alt: 'First slide', img: 'testimonial_1.png', name: 'Ellen', from: 'Sweden', to: 'Paris', sentence: '“Most of the admin was in French. movido saved me time and money for my semester abroad in Paris”' %>
              </div>
              <div class="carousel-item">
                <%= render 'shared/home/carousel-card', alt: 'Second slide', img: 'testimonial_1.png', name: 'Mariana', from: 'Argentina', to: 'Paris', sentence: '“It took me 10 minutes and I was set – and I got a good deal for my new mobile and WiFi abo on top”'  %>
              </div>
              <div class="carousel-item">
                <%= render 'shared/home/carousel-card', alt: 'Third slide', img: 'testimonial_1.png', name: 'Etienne', from: 'France', to: 'London', sentence: '“I struggled to find a good gym in my area – with movido I found the perfect one”'  %>
              </div>
              <div class="carousel-item">
                <%= render 'shared/home/carousel-card', alt: 'Fourth slide', img: 'testimonial_1.png', name: 'Yuki', from: 'Japan', to: 'Paris', sentence: '“With movido I found the perfect flat in London before even moving there”'  %>
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon control-icon" aria-hidden="true">
                <i class="fas fa-arrow-left"></i>
              </span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon control-icon" aria-hidden="true">
                <i class="fas fa-arrow-right"></i>
              </span>
              <span class="sr-only">Previous</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
