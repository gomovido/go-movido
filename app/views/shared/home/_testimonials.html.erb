<section id="carousel">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="carousel-bg" style="background-image:url(<%= asset_path 'quote-left.png' %>);">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators mb-n4">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="m-2 active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1" class="m-2"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2" class="m-2"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="3" class="m-2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <%= render 'shared/home/carousel-card', alt: 'First slide', img: 'testi_image_1.png', name: 'Ellen', from: t('pages.home.testimonials.testimonial1.from'), to: t('pages.home.testimonials.testimonial1.to'), sentence: t('pages.home.testimonials.testimonial1.sentence') %>
              </div>
              <div class="carousel-item">
                <%= render 'shared/home/carousel-card', alt: 'Second slide', img: 'testi_image_2.png', name: 'Mariana', from: t('pages.home.testimonials.testimonial2.from'), to: t('pages.home.testimonials.testimonial2.to'), sentence: t('pages.home.testimonials.testimonial2.sentence')  %>
              </div>
              <div class="carousel-item">
                <%= render 'shared/home/carousel-card', alt: 'Third slide', img: 'testi_image_3.png', name: 'Etienne', from: t('pages.home.testimonials.testimonial3.from'), to: t('pages.home.testimonials.testimonial3.to'), sentence: t('pages.home.testimonials.testimonial3.sentence') %>
              </div>
              <div class="carousel-item">
                <%= render 'shared/home/carousel-card', alt: 'Fourth slide', img: 'testi_image_4.png', name: 'Yuki', from: t('pages.home.testimonials.testimonial4.from'), to: t('pages.home.testimonials.testimonial4.to'), sentence: t('pages.home.testimonials.testimonial4.sentence')  %>
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon control-icon" aria-hidden="true">
                <i class="fas fa-arrow-left"></i>
              </span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon control-icon" aria-hidden="true">
                <i class="fas fa-arrow-right"></i>
              </span>
              <span class="sr-only">Previous</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
