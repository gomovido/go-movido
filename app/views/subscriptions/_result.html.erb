<div class="summary col-12 col-md-6 offset-lg-3 mb-5 p-5  mt-4">
  <div class="row">
    <span class="col-4 left">Choosen provider</span>
    <span class="col-8 right"><%= subscription.product.company %></span>
  </div>
  <hr>
  <div class="row">
    <span class="col-4 left">Choosen plan</span>
    <span class="col-8 right"><%= subscription.product.name %></span>
  </div>
  <hr>
  <% if subscription.sim %>
  <div class="row">
    <span class="col-4 left">SIM Card</span>
    <span class="col-8 right"><%= subscription.sim %></span>
  </div>
  <hr>
  <% end %>
  <div class="row">
    <span class="col-4 left">Name</span>
    <span class="col-8 right"><%= subscription.address.user.first_name %></span>
  </div>
  <hr>
  <div class="row">
    <span class="col-4 left">Surname</span>
    <span class="col-8 right"><%= subscription.address.user.last_name %></span>
  </div>
  <hr>
  <div class="row">
    <span class="col-4 left d-flex align-items-center">Email address</span>
    <span class="col-8 right text-break"><%= subscription.address.user.email %></span>
  </div>
  <hr>
  <div class="row">
    <span class="col-4 left d-flex align-items-center">Address</span>
    <span class="col-8 right"><%= subscription.address.street %></span>
  </div>
  <hr>
  <div class="row">
    <span class="col-4 left d-flex align-items-center">Billing address</span>
    <span class="col-8 right"><%= subscription.billing.address %></span>
  </div>
  <hr>
  <% if subscription.delivery_address %>
  <div class="row">
    <span class="col-4 left d-flex align-items-center">Delivery address</span>
    <span class="col-8 right"><%= subscription.delivery_address %></span>
  </div>
  <hr>
  <% end %>
  <div class="row">
    <span class="col-4 left">IBAN</span>
    <span class="col-8 right"><%= subscription.billing.iban_prettify %></span>
  </div>
  <hr>
  <div class="row">
    <span class="col-4 left">BIC</span>
    <span class="col-8 right"><%= subscription.billing.bic %></span>
  </div>
  <hr>
  <div class="row">
    <span class="col-4 left">Banking Institution</span>
    <span class="col-8 right"><%= subscription.billing.bank %></span>
  </div>
  <hr>
  <div class="row">
    <span class="col-4 left">Price</span>
    <span class="col-8 right"><%= subscription.product.price %>â‚¬/month</span>
  </div>
</div>
