<div class="container subscription-container d-flex flex-column align-items-center">
  <div class="small-yellow-bubble position-absolute"></div>
  <div class="big-blue-bubble position-absolute"></div>
  <div class="row d-flex align-center justify-content-center flex-column">
    <div class="col-md-12">
      <%= render 'steps', product: @subscription.product, current_step: @subscription.current_step(controller.controller_name), title: t('.title'), subtitle: t('.subtitle', href: link_to(t(".profile_link"), user_path(current_user, active_tab: 'profile'))).html_safe, total_steps: @subscription.product.total_steps, congratulations: false %>
    </div>
    <%= render 'result', subscription: @subscription %>
    <div class="col-md-6 offset-md-3 mb-5 d-flex flex-column">
      <%= link_to t('.next'), validate_subscription_path(@subscription), method: :patch, class: 'btn-main mb-3 text-center'%>
      <%= link_to t('.back'), new_subscription_billing_path(@subscription), class: 'btn-exit' %>
    </div>
  </div>
</div>
