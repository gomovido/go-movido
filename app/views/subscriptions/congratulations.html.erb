<div class="container congratulations-container mb-5">
  <figure class="big-blue-bubble position-absolute "></figure>
  <figure class="small-blue-bubble position-absolute  d-lg-block d-none"></figure>
  <figure class="small-yellow-bubble position-absolute"></figure>
  <figure class="big-purple-bubble position-fixed d-lg-block d-none"></figure>
  <%= render 'subscriptions/steps', current_step: 5, title: t('steps.congratulations'), subtitle: t('steps.congratulations_subtitle').html_safe,total_steps: @subscription.product.total_steps %>
  <div class="row pt-5">
    <div class="col-md-6 d-md-block d-none images">
      <%= image_tag(asset_path('congratulations-picture.png')) %>
      <%= image_tag(asset_path('congratulations-picture-2.png'), class: 'position-absolute white-card') %>
    </div>
    <div class="col-md-6">
      <h3 class="mb-4">Any questions</h3>
      <span class="subline">Please contact the movidocustomer service via chat, <br>email or phone.</span><br>
      <div class="mt-4">
        <%= link_to 'Contact us <i class="fas fa-arrow-right ml-2"></i>'.html_safe, '#', class: 'links d-block mb-2' %><br>
        <%= link_to 'Need to setup wifi at home ? <i class="fas fa-arrow-right ml-2"></i>'.html_safe, category_products_path(Category.find_by(name: 'wifi').id), class: 'links d-block mb-2' %><br>
        <%= link_to 'Need a bank account ? <i class="fas fa-arrow-right ml-2"></i>'.html_safe, '#', class: 'links d-block mb-2' %><br>
        <%= link_to 'Join our community <i class="fas fa-arrow-right ml-2"></i>'.html_safe, '#', class: 'links d-block mb-2' %><br>
      </div>
    </div>
  </div>
</div>
