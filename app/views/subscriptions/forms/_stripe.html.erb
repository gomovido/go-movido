<script src="https://js.stripe.com/v3/"></script>
<div class="summary col-12 col-md-6 offset-lg-3 mb-5 p-5  mt-4">
  <form action="/charge" method="post" id="payment-form" data-controller="charge">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :subscription_id, @subscription.id %>
    <div class="form-row">
      <label for="card-element">
        Credit or debit card
      </label>
      <div id="card-element" class="w-100">
        <!-- A Stripe Element will be inserted here. -->
      </div>
  ​
      <!-- Used to display form errors. -->
      <div id="card-errors" role="alert"></div>
    </div>
  ​
    <button class="btn-main w-100">Submit Payment</button>
  </form>
</div>
