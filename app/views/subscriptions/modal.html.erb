<div class="p-lg-5 p-3">
      <div class="d-flex flex-column">
        <div class="mb-2">
          <h3>Subscription number # <%= @subscription.id %></h3>
          <div class="d-flex align-items-center justify-content-between">
            <span class="font-weight">Choosen provider</span>
            <div><%= @subscription.product.company %></div>
          </div>
          <div class="d-flex align-items-center justify-content-between">
            <span class="font-weight">Choosen plan</span>
            <div><%= @subscription.product.name %></div>
          </div>
          <% if @subscription.sim %>
            <div class="d-flex align-items-center justify-content-between">
              <span class="font-weight">SIM Card</span>
              <div><%= @subscription.sim %></div>
            </div>
          <% end %>
          <div class="d-flex align-items-center justify-content-between">
            <span class="font-weight">Name</span>
            <div><%= @subscription.address.user.first_name %></div>
          </div>
          <div class="d-flex align-items-center justify-content-between">
            <span class="font-weight">Surname</span>
            <div><%= @subscription.address.user.last_name %></div>
          </div>
          <div class="d-flex align-items-center justify-content-between">
            <span class="font-weight">Email address</span>
            <div><%= @subscription.address.user.email %></div>
          </div>
          <div class="d-flex align-items-center justify-content-between">
            <span class="font-weight">Address</span>
            <div><%= @subscription.address.street %></div>
          </div>
          <div class="d-flex align-items-center justify-content-between">
            <span class="font-weight">Billing address</span>
            <div><%= @subscription.billing.address %></div>
          </div>
          <% if @subscription.delivery_address %>
            <div class="d-flex align-items-center justify-content-between">
              <span class="font-weight">Delivery address</span>
              <div><%= @subscription.delivery_address %></div>
            </div>
          <% end %>
          <% if @subscription.product.country == 'United Kingdom'%>
            <div class="d-flex align-items-center justify-content-between">
              <span class="font-weight">Account holder</span>
              <div><%= @subscription.billing.holder_name %></div>
            </div>
            <div class="d-flex align-items-center justify-content-between">
              <span class="font-weight">Account number</span>
              <div><%= @subscription.billing.account_number %></div>
            </div>
            <div class="d-flex align-items-center justify-content-between">
              <span class="font-weight">Banking institution</span>
              <div><%= @subscription.billing.bank %></div>
            </div>
          <% else %>
            <div class="d-flex align-items-center justify-content-between">
              <span class="font-weight">IBAN</span>
              <div><%= @subscription.billing.iban_prettify %></div>
            </div>
            <div class="d-flex align-items-center justify-content-between">
              <span class="font-weight">BIC</span>
              <div><%= @subscription.billing.bic %></div>
            </div>
            <div class="d-flex align-items-center justify-content-between">
              <span class="font-weight">Banking institution</span>
              <div><%= @subscription.billing.bank %></div>
            </div>
          <% end %>
          <div class="d-flex align-items-center justify-content-between">
            <span class="font-weight">Price</span>
            <div>
              <%= @subscription.product.price %><%= @subscription.product.sim_card_price.currency.symbol %>/month
            </div>
          </div>
        </div>
      </div>
</div>
