<!DOCTYPE html>
<html>
  <head>
    <title>GoMovido</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <%= action_cable_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/7d62aaa627.js" crossorigin="anonymous"></script>
    <%= favicon_link_tag asset_path('layout/favicon.ico') %>
  </head>

  <body <%= "data-turbolinks='false'".html_safe if controller_name=="products" && action_name=="index" %>>
    <%= render 'shared/navbars' %>
    <%= render 'shared/flashes' %>
    <div class="wrapper d-flex flex-column justify-content-center">
    <%= yield %>
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>
