<% subconfigs = flat[:rooms].map{|room| room[:subconfigs]} %>
<%= simple_form_for booking, data: {booking_modal_target: 'form'} do |f| %>
  <%= f.hidden_field :flat_id, value: flat[:code] %>
  <div class="d-flex align-items-start align-input justify-content-between">
    <%= f.input :full_name, required: false, input_html: {value: current_user.full_name} %>
    <%= f.input :email, required: false, input_html: {value: current_user.email} %>
  </div>
  <div class="d-flex align-items-start align-input justify-content-between">
    <%= f.input :university, required: false, input_html: {placeholder: 'University / College'} %>
    <%= f.input :phone, required: false, input_html: {data: { bookings_target: 'phone' }, placeholder: 'phone number', value: current_user.person&.phone || ''} %>
  </div>
  <% if current_user.flat_preference.flat_type == 'student_housing' %>
    <%= f.input :room_type, required: false, collection: flat[:rooms].map {|room| [room[:name], room[:name]]}, prompt: t('bookings.new.modal.placeholder.type') %>
    <%= f.input :lease_duration, required: false, collection: subconfigs.map {|subconfig| subconfig.map{|a| "#{a['lease']} week lease #{a['price']} Â£/week starts form #{a['available_from']}" }}, prompt: t('bookings.new.modal.placeholder.duration') %>
  <% end %>
  <%= f.input :requirements, input_html: {placeholder: 'Requirements'} %>
  <%= f.button :submit, t('bookings.new.modal.submit'), class:'btn-main w-100'  %>
<% end %>
