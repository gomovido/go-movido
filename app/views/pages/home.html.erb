<hr class="breaker-home">
<%= render 'shared/home/banner' %>
<section id="how-it-works">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class='main-title text-center mb-5'>
          <h1><%= t('pages.home.how-it-works.title') %></h1>
        </div>
      </div>
      <%= render 'shared/home/explanation-card', img: 'select-service.png', step: '1', title: t('pages.home.how-it-works.card1.title'), desc: t('pages.home.how-it-works.card1.description') %>
      <%= render 'shared/home/explanation-card', img: 'compare.png', step: '2', title: t('pages.home.how-it-works.card2.title'), desc: t('pages.home.how-it-works.card2.description') %>
      <%= render 'shared/home/explanation-card', img: 'choose.png', step: '3', title: t('pages.home.how-it-works.card3.title'), desc: t('pages.home.how-it-works.card3.description') %>
      <%= render 'shared/home/explanation-card', img: 'manage.png', step: '4', title: t('pages.home.how-it-works.card4.title'), desc: t('pages.home.how-it-works.card4.description') %>
      <div class="col-md-12 d-lg-flex d-none justify-content-center top-marged">
        <%= link_to t('shared.cta.start'), new_user_registration_path, class:'btn btn-main' %>
      </div>
    </div>
  </div>
</section>
<section id="about-us" class="d-lg-block d-none">
  <div class="container">
    <div class="row">
      <div class="col-md-6 d-flex flex-column justify-content-center">
        <div class="wrapper">
          <div class="main-title mb-5">
            <h1><%= t('pages.home.about-us.title') %></h1>
          </div>
          <div class="desc">
            <p><%= t('pages.home.about-us.text').html_safe %></p>
          </div>
        </div>
      </div>
      <div class="col-md-6 d-flex align-items-center justify-content-center">
        <%= image_tag(asset_path('laptop.png'))%>
      </div>
    </div>
  </div>
</section>
<section id="partners">
  <div class="container">
    <div class="row">
      <div class="col-2 partner d-flex align-items-center justify-content-center border-right border-light-gray">
        <%= image_tag(asset_path('orange.png')) %>
      </div>
      <div class="col-2 partner d-flex align-items-center justify-content-center border-right border-light-gray">
        <%= image_tag(asset_path('escp.png')) %>
      </div>
      <div class="col-2 partner d-flex align-items-center justify-content-center border-right border-light-gray">
        <%= image_tag(asset_path('revolut.png')) %>
      </div>
      <div class="col-2 partner d-flex align-items-center justify-content-center border-right border-light-gray">
        <%= image_tag(asset_path('hult.png')) %>
      </div>
      <div class="col-2 partner d-flex align-items-center justify-content-center border-right border-light-gray">
        <%= image_tag(asset_path('veolia.png')) %>
      </div>
      <div class="col-2 partner d-flex align-items-center justify-content-center border-0">
        <%= image_tag(asset_path('sorbonne.png')) %>
      </div>
    </div>
  </div>
</section>
<section id="why-us">
  <div class="container pt-2">
    <div class="row">
      <div class="col-md-4 d-flex flex-column justify-content-center">
        <div class="main-title">
          <h1><%= t('pages.home.why.title') %></h1>
        </div>
        <p class="desc"><%= t('pages.home.why.text').html_safe %></p>
        <div class="call-to-action d-none d-sm-block">
          <%= link_to t('shared.cta.start'), new_user_registration_path, class:'btn btn-main' %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="why-cards-wrapper d-flex">
          <div class='left'>
            <%= render 'shared/home/why-card', img: 'fast.png', title: t('pages.home.why.card1.title'), desc: t('pages.home.why.card1.description') %>
            <%= render 'shared/home/why-card', img: 'simple.png', title: t('pages.home.why.card2.title'), desc: t('pages.home.why.card2.description') %>
          </div>
          <div class='right'>
            <%= render 'shared/home/why-card', img: 'smart.png', title: t('pages.home.why.card3.title'), desc: t('pages.home.why.card3.description') %>
            <%= render 'shared/home/why-card', img: 'free.png', title: t('pages.home.why.card4.title'), desc: t('pages.home.why.card4.description') %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render 'shared/home/testimonials' %>
<section id="get-started">
  <div class="container-fluid m-0" style="background-image:url(<%= asset_path 'get-started-bg.png' %>);">
    <div class="row">
      <div class="col-md-12">
        <div class="get-started-wrapper d-flex flex-column flex-lg-row align-items-center justify-content-around py-3 p-lg-5">
          <div class="title">
            <h3><%= t('pages.home.bottom-banner.headline').html_safe %></h3>
          </div>
          <div>
            <span class="desc"><%= t('pages.home.bottom-banner.text').html_safe %></span>
            <%= image_tag(asset_path('box-getting-started.png'))%>
          </div>
          <div class="call-to-action text-right d-none d-sm-block">
            <%= link_to t('shared.cta.start'), new_user_registration_path, class:'btn btn-main' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
