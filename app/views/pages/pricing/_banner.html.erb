<section class="banner container">
  <div class="row align-items-center">
    <div class="col-md-6 d-none d-md-block text-end">
      <%= image_tag(asset_path("components/homepage/#{desktop_img}.png"), class:'mb-2 xl-img') %>
    </div>
    <div class="col-md-4 d-flex align-items-center">
      <div class="content">
        <h1 class="pricing-title pt-3 bold pe-1"><%= headline %></h1>
        <p class="my-md-4"><%= subheadline %></p>
        <div class="d-block d-md-none">
          <div class="d-flex align-items-center justify-content-center">
            <%= image_tag(asset_path("components/homepage/#{img}.png"), class:'d-block d-md-none iphone z-1') %>
          </div>
        </div>
        <%= link_to 'Get started', cta_link, class: 'btn-main mb-3 mb-md-0 mt-md-3 position-relative z-0' %>
        <div class="d-block d-md-none">
          <div class="d-flex align-items-center justify-content-center">
          <%= image_tag(asset_path('components/homepage/trustpilot-no-shadow.png'), class:'w-100 mb-5 trustpilot' ) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
