<div class="flow-container dashboard-container">
  <div class="container">
    <div class="row justify-content-around">
      <div class="col-xs-12">
        <h1 class="mt-3"><span class='purple bold'>Movi</span>board</h1>
        <p class='mb-3'>Manage all your services.</p>
      </div>
      <div class="col-xs-12">
        <div class="user-profil">
          <div class="d-flex align-items-center mb-3">
            <i class="fal fa-id-badge"></i>
            <div class="d-flex flex-column">
              <span class="name"><%= current_user.first_name %> <%= current_user.last_name %></span>
              <% if current_user.house.house_detail %>
                <span class="address"><%= current_user.house.house_detail.address %></span>
              <% else %>
                <span class="address">Going to <%= t("country.#{current_user.house.country.code}") %></span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="container">
    <div class="row">
      <h1>Services</h1>
      <p class='mb-3'>Summary of your movido services.</p>
      <% @orders.each do |order| %>
        <div class="col-xs-12 col-lg-4">
          <div class="subscription-card d-flex flex-column">
            <div class="d-flex align-items-center justify-content-between">
              <span class="title"><%= order.pack.capitalize %> pack</span>
              <div class="status"><%= order.state == 'succeeded' ? "<i class='fad fa-broadcast-tower green'></i>".html_safe : "<i class='fad fa-broadcast-tower red'></i>".html_safe %></div>
            </div>
            <hr>
            <% if order.subscription %>
              <div class="d-flex align-items-center justify-content-between pricing">
                <span>Started</span>
                <span><%= order.subscription.starting_date.strftime('%m/%d/%Y') %></span>
              </div>
              <div class="d-flex align-items-center justify-content-between pricing">
                <span>Next due</span>
                <span><%= order.currency_symbol %><%= number_to_currency(order.total_subscription_amount_display, :unit => '') %></span>
              </div>
              <div class="d-flex align-items-center justify-content-between pricing">
                <span>Status</span>
                <span class='green'>active</span>
              </div>
            <% else %>
              <div class="d-flex align-items-center justify-content-between pricing">
                <span>Started</span>
                <span><%= order.created_at.strftime('%m/%d/%Y') %></span>
              </div>
              <div class="d-flex align-items-center justify-content-between pricing">
                <span>Total</span>
                <span><%= order.currency_symbol %><%= number_to_currency(order.total_amount_display, :unit => '') %></span>
              </div>
              <div class="d-flex align-items-center justify-content-between pricing">
                <span>Tracking</span>
                <% if order.shipping %>
                  <span><%= order.shipping.tracking_id ? order.shipping.tracking_id : 'Processing' %></span>
                <% else %>
                  <%= link_to 'Add tracking', new_shipping_path(order.id), class:'red link' %>
                <% end %>
              </div>
              <div class="d-flex align-items-center justify-content-between pricing">
                <span>Status</span>
                <% if order.state == 'succeeded' %>
                  <span>paid</span>
                <% else %>
                  <%= link_to 'Proceed payment', checkout_path(order.id), class:'red link' %>
                <% end %>
              </div>
            <% end %>
            <div class="controls-wrapper d-flex align-items-center justify-content-around">
              <i class="fad fa-tasks-alt green"></i>
              <i class="fas fa-info-square blue"></i>
              <i class="far fa-window-close red"></i>
            </div>
            <div class="products-wrapper">
              <hr>
              <% order.products.includes([:category], [:company], [:country]).each do |product| %>
                <div class="product my-2">
                  <div class="d-flex align-items-center justify-content-between">
                    <span><%= t("cart.form.#{product.category.name}", city: current_user.house.country.city) %></span>
                    <div class="img-box">
                      <%= image_tag(product.company.logo_url, class:'logo') %>
                    </div>
                  </div>
                  <% if order.state == 'succeeded' %>
                    <div class="progress">
                      <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                  <% else %>
                    <div class="progress">
                      <div class="progress-bar bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <section class="book-a-call-banner w-100 d-flex d-md-none">
    <span class="subline"><strong>Need some help?</strong> Speak to us.</span>
    <%= link_to "<i class='fas fa-headphones-alt me-1'></i> Contact us".html_safe, 'https://calendly.com/alice_movido/movido-introcall', class: 'cta-call d-block py-1' %>
  </section>
</div>
