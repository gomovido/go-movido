<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type"/>
    <%= wicked_pdf_stylesheet_link_tag "pdf" %>
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
  </head>
  <body>
    <div class="container mt-5">
      <div class="row">
        <div class="col-12">
          <div class="header d-flex align-items-center justify-content-between">
            <div class="d-flex flex-column">
              <h1>Invoice - Starter Pack</h1>
              <p><strong>Movido France SAS</strong><br />
              608 Boulevard des Horizons,<br />
              06220 Vallauris <br />
              Company registered in France</p>
            </div>
            <%= image_tag(asset_path('logos/movido-black.svg'), class: 'movido-logo') %>
          </div>
        </div>
      </div>
      <div class="row my-5">
        <div class="col-12">
          <div class="d-flex justify-content-between mt-5">
            <div>
              <h4>Ship to:</h4>
              <p><%= @order.user.first_name %> <%=@order.user.last_name%></p>
              <p><%= @order.shipping.address %></p>
            </div>
            <div>
              <h4>Bill to:</h4>
              <p><%= @order.user.first_name %> <%=@order.user.last_name%></p>
              <p><%= @order.billing.address %></p>
            </div>
            <div>
              <h4>Order date:</h4>
              <p><%= @order.created_at.strftime("%B %e, %Y") %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="row my-5">
        <div class="col-12">
          <div class="d-flex justify-content-between">
            <h4>Items</h4>
            <h4>Price</h4>
          </div>
          <% @order.items.each do |item| %>
            <div class="d-flex justify-content-between mt-3">
              <p><%= item.product.name %></p>
              <p><%= item.product.country.currency_symbol %><%= number_to_currency(item.product.activation_price, :unit => '') %></p>
            </div>
            <hr>
          <% end %>
          <% if @order.affiliate_link.present?%>
            <div class="d-flex justify-content-between mt-3">
              <p>Affiliate link</p>
              <p><%= @order.affiliate_link.upcase %> (-10%)</p>
            </div>
            <hr>
          <% end %>
          <end>
          <div class="d-flex justify-content-between">
            <h4>Total:</h4>
            <p><strong><%= @order.currency_symbol %><%= number_to_currency(@order.total_amount_display, :unit => '') %></strong></p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>