<section class="offers-banner">
  <%= image_tag(asset_path('components/homepage/visual-assets/bg-element.png'), class:'position-absolute bg-position-1 z-0') %>
  <%= image_tag(asset_path('components/homepage/visual-assets/bg-element.png'), class:'position-absolute bg-position-2 z-0') %>
  <div class="container text-center">
    <div class="row my-4">
      <div class="col-12">
        <h2 class="mt-mb-5">The Movido offer</h2>
        <span class='subtitle'>We have created <b>two packages</b> that will help you get ready for your new home - 100% stress free and with no added fees:</span>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-6 d-flex justify-content-center">
        <div class="product-card position-relative text-left p-1">
          <div class="container mb-3">
            <%= image_tag(asset_path('components/homepage/visual-assets/envelope.png'), class:'position-absolute')%>
          </div>
          <div class="top d-flex flex-column justify-content-center">
            <div class="container mb-4">
              <h3 class="name purple">Starter Pack</h3>
              <p>Everything you need <strong>before you move</strong> - sent to your current home</p>
            </div>
            <div class="container d-flex">
              <%=image_tag(asset_path("components/homepage/icons/house.png"), class:"icon")%>
              <p>Housing search support</p>
            </div>
            <hr>
            <div class="container d-flex">
              <%=image_tag(asset_path("components/homepage/icons/mobile.png"), class:"icon")%>
              <p>Local SIM card with credit</p>
            </div>
            <hr>
            <div class="container d-flex">
              <%=image_tag(asset_path("components/homepage/icons/metro.png"), class:"icon")%>
              <p>Local public transportation</p>
            </div>
            <hr>
            <div class="container d-flex">
              <%=image_tag(asset_path("components/homepage/icons/plane.png"), class:"icon")%>
              <p>Airport pick-up to city center</p>
            </div>
          </div>
          <div class="container my-4">
            <div class="row d-flex">
              <div class="col-12 text-center">
                <%= link_to 'See more details', pricing_starter_pack_path, class: 'underline mb-3 mb-md-0 mt-4 w-100' %>
              </div>
            </div>
            <div class="row d-flex">
              <div class="col-12 text-center">
                <%= link_to 'Get started now', onboarding_starter_pack_path, class: 'btn-main mb-3 mb-md-0 mt-4 w-100' %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-md-6 d-flex justify-content-center">
        <div class="product-card position-relative text-left p-2">
          <div class="container mb-2">
            <%= image_tag(asset_path('components/homepage/visual-assets/all-in-one-card.png'), class:'position-absolute movido-card')%>
          </div>
          <div class="top d-flex flex-column justify-content-center">
            <div class="container mb-5">
              <h3 class="name purple">Settle in Pack</h3>
              <p>All your subscription in 1 simple monthly bill for your new home</p>
            </div>
            <div class="container d-flex">
              <%=image_tag(asset_path("components/homepage/icons/wifi.png"), class:"icon")%>
              <p>WiFi at home</p>
            </div>
            <hr>
            <div class="container d-flex">
              <%=image_tag(asset_path("components/homepage/icons/router.png"), class:"icon")%>
              <p>Gas, water, electricity at home</p>
            </div>
            <hr>
            <div class="container d-flex">
              <%=image_tag(asset_path("components/homepage/icons/phone.png"), class:"icon")%>
              <p>Mobile phone contract</p>
            </div>
          </div>
          <div class="container my-4">
            <div class="row d-flex">
              <div class="col-12 text-center">
                <%= link_to 'See more details', pricing_settle_in_path, class: 'underline mb-3 mb-md-0 mt-4 w-100' %>
              </div>
            </div>
            <div class="row d-flex">
              <div class="col-12 text-center">
                <%= link_to 'Get started now', onboarding_settle_in_path, class: 'btn-main mb-3 mb-md-0 mt-4 w-100' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
