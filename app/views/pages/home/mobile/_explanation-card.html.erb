<div class="explanation-card-mobile d-flex mb-5 px-4" data-animate-target="card" data-service-name="<%= title.split(' ').first.downcase.downcase %>Card"  data-action='click->animate#displayCard'>
  <div class="illustration mr-3 py-3 pr-3 pl-0"><%= image_tag(asset_path(img), style:"width: 50px") %></div>
  <div class="d-flex flex-column w-100">
    <div class="title pb-1 d-flex align-items-end justify-content-between">
      <span><%= title %></span>
      <i class="far fa-plus purple" ></i>
    </div>
    <span class='desc card-link pr-4 d-none'><%= desc %></span>
  </div>
</div>
