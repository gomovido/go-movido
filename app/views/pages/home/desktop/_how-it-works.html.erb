<section id="how-it-works">
  <%= image_tag(asset_path('pages/home/blue-bubble-stylish.png'), class:"stylish") %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class='main-title text-left'>
          <h2><%= t('pages.home.how-it-works.title') %></h2>
        </div>
      </div>
    </div>
    <div class="row position-relative mb-4">
      <%= image_tag(asset_path('pages/home/steps-way.png'), class:"steps-way") %>
      <div class="col-6 d-flex flex-column justify-content-between">
        <%= render 'pages/home/desktop/explanation-card', img: 'pages/home/step-1.png', title: t('pages.home.how-it-works.card1.title'), centered: false, desc: t('pages.home.how-it-works.card1.description') %>
        <%= render 'pages/home/desktop/explanation-card', img: 'pages/home/step-2.png', title: t('pages.home.how-it-works.card2.title'), centered: false, desc: t('pages.home.how-it-works.card2.description') %>
        <%= render 'pages/home/desktop/explanation-card', img: 'pages/home/step-3.png', title: t('pages.home.how-it-works.card3.title'), centered: true, desc: t('pages.home.how-it-works.card3.description') %>
      </div>
      <div class="col-6 d-flex flex-column justify-content-between">
        <%= image_tag(asset_path('pages/home/steps-picture.png'), class:"w-100 mb-4") %>
        <%= render 'pages/home/desktop/explanation-card', img: 'pages/home/step-4.png', title: t('pages.home.how-it-works.card4.title'), centered: false, desc: t('pages.home.how-it-works.card4.description') %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 d-lg-flex d-none justify-content-center mt-5">
        <%= link_to t('pages.home.how-it-works.start'), new_user_registration_path, class:'btn btn-main' %>
      </div>
    </div>
  </div>
</section>
