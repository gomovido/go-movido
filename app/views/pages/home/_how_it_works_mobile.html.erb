  <section class="how-it-works d-block d-md-none mt-5">
    <div class="container">
      <div class="row">
        <div class="col-12 p-4">
          <h2 class="title">How it works</h2>
          <p class="text-center subheadline"> Make sure that youâ€™re ready as soon as you step off the plane in three simple steps.</p>
        </div>
        <div class="col-12 p-0">
          <div data-controller="carousel" class="swiper-container" data-carousel-options-value='{"pagination": {"el": ".swiper-pagination"}, "autoplay": { "delay": 3000, "disableOnInteraction": false}}'>
            <div class="swiper-wrapper">
              <% slides.each_with_index do |slide, i| %>
                <div class="swiper-slide text-center">
                  <div class="card">
                    <div class="number">
                      <span><%= i + 1 %></span>
                    </div>
                    <div class="content">
                      <p class="title"><%= slide[:title] %></p>
                      <p class="description"><%= slide[:content] %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="swiper-pagination position-relative"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
