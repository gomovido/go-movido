<div class="container about-container mb-5" data-controller="animate">
  <div class="big-blue-bubble position-absolute"></div>
  <div class="big-purple-bubble position-fixed"></div>
  <div class="small-yellow-bubble position-absolute"></div>
  <div class="row">
    <div class="col-12">
      <h2 class="text-center mb-3"><%= t('pages.about.title') %></h2>
      <p class="mb-3"><%= t('pages.about.part_1') %></p>
      <p class="mb-5"><%= t('pages.about.part_2').html_safe %></p>
    </div>
    <div class="col-12">
      <div class="d-flex align-items-center">
        <i class="fas fa-info mr-5"></i>
        <p class="mb-3 text-justify"><%= t('pages.about.part_3') %></p>
      </div>
    </div>
