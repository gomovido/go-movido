<section id="why-us">
  <div class="container pt-2">
    <div class="row">
      <div class="col-md-6 sm-12 d-flex flex-column justify-content-center">
        <div class="main-title">
          <h2><%= t('pages.home.why-us.title').html_safe %></h2>
        </div>
        <div class="why-cards-wrapper d-flex flex-column">
            <%= render 'pages/desktop/home/why-card', img: 'pages/home/fast.png', title: t('pages.home.why-us.card1.title'), desc: t('pages.home.why-us.card1.description') %>
            <%= render 'pages/desktop/home/why-card', img: 'pages/home/smart.png', title: t('pages.home.why-us.card2.title'), desc: t('pages.home.why-us.card2.description') %>
            <%= render 'pages/desktop/home/why-card', img: 'pages/home/simple.png', title: t('pages.home.why-us.card3.title'), desc: t('pages.home.why-us.card3.description') %>
            <%= render 'pages/desktop/home/why-card', img: 'pages/home/free.png', title: t('pages.home.why-us.card4.title'), desc: t('pages.home.why-us.card4.description') %>
        </div>
      </div>
      <div class="col-md-6 d-lg-block d-none">
        <%= image_tag(asset_path('pages/home/iphone.png'), class:"w-100", loading: 'lazy') %>
      </div>
    </div>
  </div>
</section>
