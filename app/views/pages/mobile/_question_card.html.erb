<div class="card mb-4" data-toggle="collapse" data-target="#<%= collapse %>" aria-expanded="true" aria-controls="<%= collapse %>">
  <div class="card-header d-flex justify-content-between align-items-center" id="<%= heading %>">
    <h5 class="mb-0" class="btn btn-link">
      <%= question %>
    </h5>
    <i class="fas fa-plus"></i>
  </div>
  <div id="<%= collapse %>" class="collapse" aria-labelledby="<%= heading %>" data-parent="#accordion">
    <div class="card-body">
      <%= answer %>
    </div>
  </div>
</div>
