<div class=" col-12 explanation-card-mobile d-flex px-4 mb-5" data-animate-target="card" data-service-name="<%= title.split(' ').first.downcase.downcase %>Card" data-action='click->animate#displayCard'>
  <div class="w-100">
    <div class="title mb-3 d-flex justify-content-between">
      <div class="illustration"><%= image_tag(asset_path(img), width: 50, loading: 'lazy') %></div>
      <span><%= title %></span>
      <i class="far fa-plus purple" ></i>
    </div>
    <span class='desc card-link d-none'><%= desc %></span>
  </div>
</div>
