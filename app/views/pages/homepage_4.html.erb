<div class="home-container static-container" data-controller="lead">
  <section class="banner container">
    <div class="row align-items-center">
      <div class="col-md-5 d-flex align-items-center">
        <div class="content">
          <h1>Making moving simple.</h1>
          <p>Housing, Local SIM, transportation, airport pick-up and more - everything you need before your arrive</p>
          <%= image_tag(asset_path('components/homepage/iphone-banner-no-bg.png'), class:'d-block d-md-none') %>
