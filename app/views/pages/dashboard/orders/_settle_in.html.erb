<div class="col-xs-12 col-lg-4">
  <div class="subscription-card d-flex flex-column">
    <div class="d-flex align-items-center justify-content-between">
      <span class="title"><%= order.pack.capitalize %> pack</span>
      <% if order&.subscription.state == 'active' %>
        <div class="status"><i class='fad fa-broadcast-tower green'></i></div>
      <% elsif order&.subscription.state == 'cancelled' %>
        <div class="status"><i class='fad fa-broadcast-tower red'></i></div>
      <% else %>
        <div class="status"><i class='fad fa-broadcast-tower green'></i></div>
      <% end %>
    </div>
    <hr>
    <div class="d-flex align-items-center justify-content-between pricing">
      <span>Started</span>
      <span><%= order.subscription.starting_date.strftime('%m/%d/%Y') %></span>
    </div>
    <% if order.subscription.state != 'cancelled' %>
      <div class="d-flex align-items-center justify-content-between pricing">
        <span>Next due</span>
          <span><%= order.currency_symbol %><%= number_to_currency(order.subscription.next_due_amount, :unit => '') %></span>
      </div>
    <% end %>
    <div class="d-flex align-items-center justify-content-between pricing">
      <span>Payment status</span>
      <% if order.subscription.paid && order.subscription.state != 'cancelled' %>
        <span class='green'>Paid</span>
      <% else %>
        <%= link_to 'Proceed payment', checkout_path(order.id), class:'red link' %>
      <% end %>
    </div>
    <div class="d-flex align-items-center justify-content-between pricing">
      <span>Subscription status</span>
      <span class=<%= order.subscription.state == 'cancelled' ? 'red' : 'green' %>><%= order.subscription.state %></span>
    </div>
    <div class="controls-wrapper d-flex align-items-center justify-content-around">
      <i class="fad fa-tasks-alt green"></i>
      <i class="fas fa-info-square blue"></i>
      <%= link_to "<i class='far fa-window-close red'></i>".html_safe, cancel_subscription_path(order.id), method: 'put', data: { confirm:"Are you sure?" } %>
    </div>
    <div class="products-wrapper">
      <hr>
      <% order.products.includes([:category], [:company], [:country]).each do |product| %>
        <%= render 'pages/dashboard/orders/progress-bar', product: product, active: order.subscription ? order.subscription.active? : order.paid? %>
      <% end %>
    </div>
    <%= link_to 'Invoice', invoice_path(order_id: order.id, format: :pdf), class:'btn-main'%>
  </div>
</div>
