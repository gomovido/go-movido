<div class="modal modal-booking fade" id="bookingModal" tabindex="-1" role="dialog" aria-labelledby="bookingModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="top-nav d-flex justify-content-between align-items-center mb-4">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fad fa-times"></i></button>
          <span class="main-title text-center">Booking request</span>
          <span></span>
      </div>
      <div class="modal-body">
        <div class="flat-summary d-flex">
          <div class="img" style="background-image: url(<%= flat[:images][0][:url] %>)"></div>
          <div class="details d-flex flex-column justify-content-evenly">
            <span class="title"><%= flat[:title] %></span>
            <hr>
            <span class="price"><%= manage_currency(flat[:currency_code].downcase) if type != 'student_housing' %><%= flat[:price] %> / <%= flat[:billing] %></span>
          </div>
        </div>
        <hr class="w-100">
        <div class="booking-body"></div>
      </div>
    </div>
  </div>
</div>
