<div class="flats-container container" data-controller="flats" data-turbolinks="false">
  <%= render 'flats/mobile/filters', flat_preference: @flat_preference, start_min_price: @start_min_price, start_max_price: @start_max_price, range_min_price: @range_min_price, range_max_price: @range_max_price %>
  <div class="row">
    <%= render 'flats/mobile/subnavbar', location: @location, flat_preference: @flat_preference, move_in: @move_in, move_out: @move_out %>
    <div class="col-12 clear-filters">
      <%= render 'flats/mobile/clear_filters', active_filters: @flat_preference.active?, location: @location, type: @type %>
    </div>
    <div class="flats-wrapper w-100">
      <div class="flats-card-wrapper w-100" data-flats-target="entries">
        <%= render 'flats/mobile/flats', flats: @flats, type: @type, location: @location  %>
      </div>
      <div class="col-12 no-results">
        <%= render 'flats/mobile/no_results', flats: @flats, type: @type, location: @location  %>
      </div>
    </div>
    <div data-flats-target="pagination">
      <%== pagy_nav(@pagy) %>
    </div>
    <div class="w-100 text-center spinner-container d-none" data-flats-target="spinner" >
      <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
    </div>
  </div>
</div>
