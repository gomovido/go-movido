<div class="flats-container container-fluid" data-controller="flats" data-turbolinks="false">
  <%= render 'flats/desktop/index/filters', flat_preference: @flat_preference, start_min_price: @start_min_price, start_max_price: @start_max_price, range_min_price: @range_min_price, range_max_price: @range_max_price %>
  <div class="row" data-controller="map">
    <div class="col-5 p-0 px-3">
      <%= render 'flats/desktop/index/subnavbar', location: @location, type: @type, flat_preference: @flat_preference, move_in: @move_in, move_out: @move_out %>
      <div class="flats-wrapper w-100">
        <div class="flats-card-wrapper w-100" data-flats-target="entries">
          <%= render 'flats/desktop/index/flats', flats: @flats, type: @type, location: @location  %>
        </div>
        <div class="no-results">
          <%= render 'flats/desktop/index/no_results', flats: @flats, type: @type, location: @location  %>
        </div>
      </div>
      <div data-flats-target="pagination" class="pagy">
        <%= render 'flats/desktop/index/pagy', pagy: @pagy %>
      </div>
      <div class="w-100 text-center spinner-container d-none" data-flats-target="spinner" >
        <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
      </div>
    </div>
    <div class="map col-7">
      <%= render 'flats/desktop/index/map', markers: @markers, center: @center %>
    </div>
  </div>
</div>
