<% if billing_details.present? %>
  <div>
    <span class="title"><%= t('flats.show.rental_conditions') %></span>
    <div class="billing-details mt-3">
      <div class="row">
        <div class="col-6 d-flex justify-content-between">
          <span class="subtitle"><%= t('flats.show.contract') %></span>
          <span class="value"><%= billing_details[:type] %></span>
        </div>
        <div class="col-6">
          <span class="subtitle">Bills included</span>
           <div class="facilities">
            <% billing_details[:included_bills].each do |bill|  %>
              <div class="facility"><%= bill %></div>
            <% end %>
          </div>
        </div>
        <hr class="w-100">
      </div>
      <div class="row">
        <div class="col-6 d-flex align-items-center justify-content-between">
          <span class="subtitle"><%= t('flats.show.cancellation_policy') %></span>
          <span class="value"><%= billing_details[:cancellation_policy] %></span>
        </div>
        <div class=" col-6 d-flex align-items-center justify-content-between">
          <span class="subtitle"><%= t('flats.show.deposit') %></span>
          <span class="value"><%= billing_details[:deposit] %></span>
        </div>
      </div>
      <hr class="w-100">
      <div class="row">
        <div class="col-6 d-flex align-items-center justify-content-between">
          <span class="subtitle"><%= t('flats.show.min_stay') %></span>
          <span class="value"><%= billing_details[:min_nights].to_s + ' ' + t('flats.show.nights') %></span>
        </div>
      </div>
      <hr class="w-100">
    </div>
  </div>
<% end %>
