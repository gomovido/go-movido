<div class="container complete-profile-container d-flex align-center pb-5 justify-content-center flex-column">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="form-base" data-controller="registration">
        <h1 class="mb-4 d-flex align-items-center"><%= image_tag(asset_path('devise/profile-icon.png'), class:"picto") %> <%= t('users.complete_profil.mobile_title') %></h1>
        <%= simple_form_for [@user], method: :put do |f| %>
        <input name="subscription_id" type="hidden" value="<%= params[:subscription_id] %>">
        <%= f.input :phone,
              required: true,
              input_html: { data: { registration_target: 'phone' } } %>
        <%= f.input :birthdate, as: :string,
                 required: true,
                 input_html: { placeholder: 'DD/MM/YYYY', class:'background-white datepicker', data: {
                  controller: "flatpickr", flatpickr_date_format: "d-m-Y", flatpickr_max_date: Time.zone.now - 16.years} } %>
        <%= f.input :birth_city,
                required: true,
                input_html: {
                  placeholder: t('users.complete_profil.placeholder', placeholder: t('activerecord.attributes.user.birth_city')).capitalize,
                  data: {
                    registration_target: 'cityInput'}} %>
        <div class="mt-4">
          <span class="mandatory"><%= t('users.complete_profil.mandatory') %></span>
          <%= f.button :submit, t('users.complete_profil.button'), class:'btn-main w-100' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
