<div class="container profile-container my-4" data-controller="profil-form" data-profil-form-readonly-class="readonly" data-profil-form-hide-class="d-none" data-profil-form-flex-class="d-flex">
    <figure class="big-blue-bubble position-fixed"></figure>
    <figure class="big-purple-bubble position-fixed"></figure>
  <div class="row">
    <div class="tabs col-12">
      <ul class="nav nav-pills" id="pills-tab" role="tablist">
        <li class="nav-item ml-0">
          <a class="nav-link <%= params[:active_tab] ? '' : 'active' %>" id="pills-subscriptions-tab" data-toggle="pill" href="#pills-subscriptions" role="tab"><%= t('.subscriptions_tab') %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= params[:active_tab] == 'addresses' ? 'active' : '' %>" id="pills-addresses-tab" data-toggle="pill" href="#pills-addresses" role="tab"><%= t('.addresses_tab') %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= params[:active_tab] == 'profile' ? 'active' : '' %>" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab"id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab"><%= t('.profile_tab') %></a>
        </li>
      </ul>
    </div>
  </div>
  <hr>
  <div class="tab-content row" id="pills-tabContent">
    <%= render 'users/profil' %>
    <%= render 'users/subscriptions', subscriptions: @subscriptions %>
    <%= render 'users/addresses', address: @address %>
  </div>
</div>
