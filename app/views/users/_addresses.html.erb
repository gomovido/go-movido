<div class="addresses-container col-12 tab-pane fade" id="pills-addresses" role="tabpanel">
    <% current_user.addresses.order("active DESC").each do |address| %>
      <div class="addresses-card-wrapper" data-id="<%= address.id %>" data-reflex="click->AddressReflex#default" >
        <div class="address-card p-3 d-flex align-items-center my-3 <%= address.active ? 'active-address' : '' %>"  >
          <i class="fas fa-map-marker-alt mr-3"></i>
          <span class="address"> <%= address.street %> </span>
        </div>
      </div>
    <% end %>
    <div class="addresses-card-wrapper my-4">
      <div class="address-input-wrapper px-3 d-flex align-items-center" data-profil-form-target="addAddressButton" data-action='click->profil-form#toggleAddressAutocomplete'>
        <i class="far fa-plus-square mr-3"></i>
        <span class="address"><%= t('.add') %></span>
      </div>
      <div class="border-0 align-items-center d-none" data-profil-form-target="addAddressInput">
        <div class="w-100">
          <%= simple_form_for(address) do |f| %>
          <div class="d-flex align-items-center justify-content-between">
            <%= f.input :street,
            autofocus: true,
            placeholder: t('.form.placeholder.street'),
            required: true,
            label: false,
            input_html: { class: 'border-0', data: {
            profil_form_target: 'addressInput',
            reflex_dataset:'combined'
            }}%>
            <%= f.hidden_field :zipcode, id:'address_zipcode' %>
            <%= f.hidden_field :city, id:'address_city' %>
            <span data-reflex="click->AddressReflex#submit" data-reflex-dataset=“combined” class="btn-main"><%= t('.cta') %></span>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
