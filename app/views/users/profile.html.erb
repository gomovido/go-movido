<div class="container dashboard mt-md-5 background-waves" style="background-image:url(<%= asset_path 'pages/dashboard/waves-back.png' %>);">
  <div class="row justify-content-center">
    <div class="col-12 col-md-9 col-lg-6">
      <div class="form-base p-3">
        <%= link_to dashboard_path do %>
          <i class='fas fa-arrow-left black'></i>
        <% end %>
        <h1 class="text-start purple mb-3">Update profile</h1>
        <%= simple_form_for @user, url: dashboard_update_profile_path, method: :put do |f| %>
        <%= f.input :email %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :phone, required: false, input_html: {data: { animate_target: 'phone' }, placeholder: 'phone number', id: 'user_phone'}, label:'Phone (optional)' %>
        <%= f.error(:base) %>
        <%= f.submit 'Update profile', class:'btn btn-main mt-4 mb-3' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/components/dashboard_navbar' %>
