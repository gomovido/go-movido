<div class="col-6 offset-3 profil-form-wrapper mb-5 tab-pane fade <%= params[:active_tab] == 'profile' ? 'show active' : '' %>" id="pills-profile" role="tabpanel" data-reflex-root=".profil-form-wrapper">
  <figure class="small-yellow-bubble position-absolute"></figure>
  <figure class="small-blue-bubble position-absolute"></figure>
  <div data-profil-form-target="errors" class="my-3 text-danger"></div>
  <%= simple_form_for user, html: {id:"profil-form", class: 'form-base'}, data: {reflex: "submit->UserReflex#submit" } do |f| %>
  <div class="d-flex justify-content-between first-row">
    <%= f.input :first_name, input_html: {data: {profil_form_target: 'input', action: 'change->profil-form#updateNavbar'}} %>
    <%= f.input :last_name, input_html: {data: {profil_form_target: 'input', action: 'change->profil-form#updateNavbar'}} %>
  </div>
    <%= f.input :email, label: 'E-mail', input_html: {data: {profil_form_target: 'input'}} %>
    <%= f.input :phone , input_html: {data: {profil_form_target: 'phone'}} %>
    <%= f.input :birthdate , as: :string,
      required: true,
      input_html: { placeholder: 'DD/MM/YYYY', class:'datepicker width', data: {profil_form_target: 'input',
      controller: "flatpickr", flatpickr_date_format: "d-m-Y", flatpickr_max_date: Time.zone.now - 16.years}}%>
    <%= f.input :birth_city , input_html: {data: {profil_form_target: 'birthCity', }} %>
    <%= f.button :submit, t('.submit'), class:'btn-main w-100 border-0' %>
  <% end %>
</div>
