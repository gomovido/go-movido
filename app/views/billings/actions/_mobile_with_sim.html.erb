<%= f.simple_fields_for :subscription do |s| %>
  <div class="mb-2">
      <%= s.hidden_field :id, value: @subscription.id %>
      <%= s.input :delivery_address, required: true, placeholder: t('billings.new.form.hint.bank'), hint: t('billings.new.form.hint.delivery_address'), readonly: true, input_html: { class: 'form-control', data: {subscription_target: 'deliveryAddressInput'}} %>
  </div>
   <div class="actions d-flex flex-column mt-4">
    <span class="btn btn-main disabled mb-4" id="continueButton" data-subscription-target='continueButton' data-action="click->subscription#stepForward"><%= t('billings.new.form.button.next') %></span>
    <%= link_to t('billings.new.form.button.back'), url_for(:back), class: 'btn-exit' %>
  </div>
</div>
<div class="d-none sim-wrapper" data-subscription-target="secondPart">
  <label for="sim" class="sim-label mr-2">Sim card size</label>
  <i class="fas fa-info-circle" data-toggle="tooltip" data-placement="top" data-html="true" title="<strong>Tip:</strong> You can always take a pair of scissors and cut the plastic of your SIM card to turn your Standard / Micro SIM into a Nano SIM"></i>
  <div class="d-flex sim-cards justify-content-around align-items-baseline">
    <%= s.collection_radio_buttons(:sim, [['Nano', 'nano'], ['Standard / Micro', 'micro']], :first, :last, checked: 'Nano') do |b| %>
    <%= b.label { b.radio_button + b.value + image_tag(asset_path"#{b.text}.png") } %>
    <% end %>
  </div>
  <div class="actions d-flex flex-column mt-4">
    <%= s.button :submit, t('billings.new.form.button.next'), class: 'btn-main mb-4' %>
    <span class="btn-exit" data-action="click->subscription#stepBackward"><%= t('billings.new.form.button.back') %></span>
  </div>
</div>
<% end %>
