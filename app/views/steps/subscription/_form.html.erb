
<%= simple_form_for subscription, url: checkout_path(order.id), data: {reflex: "submit->SubscriptionReflex#create", reflex_serialize_form: true  } do |f| %>
  <%= f.hidden_field :order_id, value: order.id %>
  <div class="d-flex">
    <div>
      <%= f.check_box :terms, label: false, class: 'me-2 custom-checkbox' %>
    </div>
    <label for="">I accept the Terms and Conditions of Movido and I explicitly accept the start of the service before withdrawal period end.</label>
  </div>
  <div class="invalid-feedback d-block"><%= f.error(:terms) %></div>
  <div class="d-flex">
    <div>
      <%= f.check_box :terms_provider, label: false, class: 'me-2 custom-checkbox' %>
    </div>
    <label for="">I accept the Terms and Conditions of Movido providers</label>
  </div>
  <div class="invalid-feedback d-block"><%= f.error(:terms_provider) %></div>
  <hr>
  <%= f.button :submit, 'Continue' , class: 'btn-main mb-5' %>
<% end %>

