<div class="flow-container" data-controller="animate">
  <div class="container">
      <div class="row justify-content-center">
        <div class="col-xs-12 col-lg-6">
        <%= render 'shared/chat', message: message %>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-xs-12">
          <div class="content-container" data-delay="2" data-animate-target="contentContainer">
            <%= render 'steps/subscription/legals', order: order %>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-xs-12 col-lg-6">
          <div class="content-container" data-delay="2" data-animate-target="contentContainer">
            <div class="form-base">
              <%= render 'steps/subscription/form', subscription: subscription, order: order %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
