<div class="flow-container" data-controller="animate">
  <%= render 'shared/progress_bar', step: 4 %>
  <div class="container">
      <%= render 'shared/chat', messages: messages %>
      <div class="spinner-container" data-delay="1"><div class="spinner-border" role="status"></div></div>
      <div class="content-container" data-delay="4" data-animate-target="contentContainer">
        <div class="form-base">
          <%= link_to 'Buy now', orders_path, method: :post, class: 'btn-main' %>
        </div>
    </div>
  </div>
</div>

