<div class="flow-container" data-controller="animate">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xs-12 col-lg-6">
        <div class="content-container" data-delay="2" data-animate-target="contentContainer">
          <h3 class="mt-3">Order summary</h3>
          <hr>
          <div class="pricing d-flex flex-column text-center">
            <% order.items.includes([:product]).each do |item| %>
              <div class="pricing-card">
                <div class="product-img">
                  <%= image_tag(asset_path(item.product.company.logo_url)) %>
                </div>
                <div class="product-name">
                  <span class="name"><%= item.product.name %></span>
                  <span class="description"><%= item.product.description %></span>
                </div>
                <div class="product-price">
                  <span class="price-lite"><%= item.product.country.currency_symbol %><%= number_to_currency(item.product.activation_price, :unit => '') %></span>
                </div>
              </div>
            <% end %>
            <div class="total-price">
              <div class="d-flex justify-content-between">
                <span>Shipping</span>
                <span class="price">FREE</span>
              </div>
              <div class="d-flex justify-content-between total">
                <span>Total price</span>
                <span class="price"><%= order.currency_symbol %> <%= (order.total_amount / 100).round(3).to_f %></span>
              </div>
            </div>
          </div>
          <hr>
          <div class="form-base">
            <%= render 'steps/checkout/form', order: order, billing: billing %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
