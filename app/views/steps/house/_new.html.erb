<div class="flow-container" data-controller="animate">
  <%= render 'shared/progress_bar', step: 2 %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xs-12 col-lg-6">
      <%= render 'shared/chat', message: message %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-xs-12 col-lg-6">
        <div class="content-container" data-delay="2" data-animate-target="contentContainer">
          <div class="form-base">
            <%= render "steps/house/forms/#{pack}", house: house, pack: pack %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

