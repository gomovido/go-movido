<div class="padded"></div>
<div class="checkboxes-wrapper">
  <%= image_tag(asset_path('components/checkboxes/cards.png')) %>
  <%= simple_form_for user_preference, url: new_cart_path, data: {reflex: "submit->CartReflex#create", reflex_serialize_form: true  } do |f| %>
  <div class="checkboxes">
    <h2>Starter Pack</h2>
    <p>Delivered to your current home before you move</p>
    <ul>
      <%= f.collection_check_boxes(:service_ids, Service.all, :id, :name, include_hidden: false) do |service| %>
        <li><%= service.label { service.check_box(checked: false, class: "custom-checkbox") + t("cart.form.#{service.text}") } %></li>
      <% end %>
      <li><label><input class="custom-checkbox" type="checkbox" value="1" checked="true"  disabled="disabled" >+ free surprise 🍪</label></li>
      <li><label><input class="custom-checkbox" type="checkbox" value="1" checked="true" disabled="disabled" >+ free shipping 📦</label></li>
    </ul>
    <p>*Estimated delivery time: 1 week</p>
    <div class="invalid-feedback d-block"><%= f.error(:base) %></div>
  </div>
  <%= simple_fields_for order do |p| %>
    <label>Do you have a PROMOCODE?</label>
    <%= p.input :affiliate_link, label: false, placeholder: 'PROMOCODE' %>
  <% end %>
  <div class="p-2">
    <div class="d-flex">
      <div>
        <%= f.check_box :marketing, label: false, class: 'me-2 custom-checkbox' %>
      </div>
      <label for="terms">I want to receive marketing communications and special offers from movido and partners</label>
    </div>
    <div class="d-flex">
      <div>
        <%= f.check_box :terms, label: false, class: 'me-2 custom-checkbox' %>
      </div>
      <label for="marketing">I accept the Terms and Conditions of movido</label>
    </div>
    <div class="invalid-feedback d-block"><%= f.error(:terms) %></div>
  </div>
  <hr>
  <%= f.button :submit, 'Continue' , class: 'btn-main w-100 mb-2' %>
  <%= link_to 'Back', new_user_preference_path, class:'btn-main-white w-100 mb-5' %>
  <% end %>
</div>
