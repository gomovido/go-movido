<div class="padded"></div>
<div class="checkboxes-wrapper">
  <%= image_tag(asset_path('components/checkboxes/cards.png')) %>
  <%= simple_form_for user_preference, url: new_cart_path, data: {reflex: "submit->CartReflex#create", reflex_serialize_form: true  } do |f| %>
  <div class="checkboxes">
    <h2>Starter Pack</h2>
    <p>Delivered to your current home before you move</p>
    <ul>
      <%= f.collection_check_boxes(:service_ids, Service.all, :id, :name, include_hidden: false) do |service| %>
        <li><%= service.label { service.check_box(checked: false, class: "custom-checkbox") + service.text } %></li>
      <% end %>
      <li><label><input class="custom-checkbox" type="checkbox" value="1" checked="true"  disabled="disabled" >+ free surprise 🍪</label></li>
      <li><label><input class="custom-checkbox" type="checkbox" value="1" checked="true" disabled="disabled" >+ free shipping 📦</label></li>
    </ul>
  </div>
  <%= simple_fields_for order do |p| %>
    <label>Do you have a PROMOCODE?</label>
    <%= p.input :affiliate_link, label: false, placeholder: 'PROMOCODE' %>
    <div class="custom-errors"><%= order.errors[:affiliate_link].present? ? user_preference.errors[:affiliate_link][0] : '' %></div>
  <% end %>
  <div class="p-2">
    <p><input class="custom-checkbox me-2" type="checkbox" value="0" >I want to receive marketing communications and special offers from movido and partners</p>
    <p class='m-0'><%= f.check_box :terms, label: false, class: 'me-2' %> I accept the <span class="purple"> Terms and Conditions</span> of movido</p>
    <div class="custom-errors"><%= user_preference.errors[:terms].present? ? user_preference.errors[:terms][0] : '' %></div>
    <p>movido will process your personal data according to our <span class="purple">Privacy Policy</span>.</p>
  </div>
  <%= f.button :submit, 'Continue' , class: 'btn-main mb-5' %>
  <% end %>
</div>
